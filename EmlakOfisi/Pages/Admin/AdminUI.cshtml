@page
@model EmlakOfisi.Pages.Admin.AdminUIModel
@{
	ViewData["Title"] = "Admin Sayfası";
}

<a class="btn btn-primary" href="/Admin/Add">Add Agent</a>
<h2>Agents</h2>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Username</th>
			<th>Password</th>
		</tr>
	</thead>
	<tbody>
		@for (int i = 0; i < Model.Agents.Count; i++)
		{
			<tr>
				<td>@(i+1)</td>
				<td>@Model.Agents[i].Name</td>
				<td>@Model.Agents[i].Username</td>
				<td>@Model.Agents[i].Password</td>
			</tr>
		}
	</tbody>
</table>