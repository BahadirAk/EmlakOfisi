@page
@model EmlakOfisi.Pages.Login.LoginModel
@{
}

<!DOCTYPE html>

<h2 style="color:red">@ViewData["Message"]</h2>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Login</title>
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		@using (Html.BeginForm("OnPost", "Login", FormMethod.Post))
		{
			<div class="form-group">
				@Html.LabelFor(m => m.User.Username,"Kullanıcı Adı")
				@Html.TextBoxFor(m => m.User.Username, new { @class = "form-control", placeholder = "Lütfen kullanıcı adınızı giriniz." })
				@Html.ValidationMessageFor(m => m.User.Username)
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.User.Password,"Şifre")
				@Html.TextBoxFor(m => m.User.Password, new { @class = "form-control", placeholder = "Lütfen şifrenizi giriniz." })
				@Html.ValidationMessageFor(m => m.User.Password)
			</div>
			<button type="submit" class="btn btn-block btn-success">Giriş Yap</button>
		}
	</div>
</body>
</html>