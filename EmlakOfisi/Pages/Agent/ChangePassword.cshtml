@page "{id:min(1)}"
@model EmlakOfisi.Pages.Agent.ChangePasswordModel
@{
}

<h2 style="color:red">@ViewData["Message"]</h2>

<div class="container">
	@using (Html.BeginForm("OnPost", "Agent", FormMethod.Post))
	{
		<div class="form-group">
			@Html.LabelFor(m => m.OldPassword, "Eski Şifre")
			@Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.OldPassword)
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.NewPassword, "Yeni Şifre")
			@Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.NewPassword)
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.ConfirmPassword, "Yeni Şifreyi Tekrarla")
			@Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.ConfirmPassword)
		</div>
		@Html.HiddenFor(m => m.Agent.Id)
		<div>
			<button type="submit" class="btn btn-success">Güncelle</button>
			<a class="btn btn-primary" href="/Agent/AgentUI">Geri</a>
		</div>
	}
</div>